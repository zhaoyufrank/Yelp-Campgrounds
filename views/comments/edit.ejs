<%- include("../partials/header") %>



<div class="container" style="margin: 50px auto; width:40%">
	<h2 style="text-align: center; margin-bottom: 20px">
		Update Comment to <%= campground.name %>
	</h2>
	<form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<input class = "form-control" type="text" name="comment[text]" value="<%= comment.text %>" required>
		</div>
		<!-- <div class="form-group">
			<input class = "form-control" type="text" name="comment[author]" placeholder="author" required>
		</div> -->
		<div class="form-group">
			<input class="btn btn-lg btn-primary btn-block" type="submit">
		</div>
		<p>
			<a href="/campgrounds/<%= campground._id %>">Go Back</a>
		</p>
	</form>
</div>

<%- include("../partials/footer") %>